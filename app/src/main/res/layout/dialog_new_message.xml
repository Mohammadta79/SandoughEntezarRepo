<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_dialog_new_message"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_bottom_sheet"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/vazir_bold"
        android:text="ایجاد پیام جدید"
        android:textColor="@color/DarkPrimaryColor"
        android:textSize="18sp"></TextView>

    <EditText
        android:id="@+id/txt_new_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/shape_edt_login"
        android:fontFamily="@font/vazir_medium"
        android:gravity="right|center"
        android:hint="عنوان پیام"
        android:paddingRight="16dp"
        android:textSize="14sp"></EditText>

    <EditText
        android:id="@+id/txt_new_message"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/shape_edt_login"
        android:fontFamily="@font/vazir_medium"
        android:gravity="center|right"
        android:hint="متن پیام"
        android:lines="5"
        android:paddingRight="10dp"
        android:textSize="16sp"></EditText>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_create_message"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/shape_btn_login_enable"
        android:elevation="10dp"
        android:fontFamily="@font/vazir_medium"
        android:text="ایجاد پیام"
        android:textColor="@color/white"></androidx.appcompat.widget.AppCompatButton>

</LinearLayout>