<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.auth.LoginFragment">

    <EditText

        android:id="@+id/edt_national_id"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/shape_edt_login"
        android:drawableLeft="@drawable/ic_card"
        android:fontFamily="@font/vazir_medium"
        android:hint="کد ملی"
        android:inputType="number"
        android:gravity="right|center"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:textSize="14dp"></EditText>

    <EditText
        android:id="@+id/edt_password"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/edt_national_id"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/shape_edt_login"
        android:drawableLeft="@drawable/ic_pass"
        android:fontFamily="@font/vazir_medium"
        android:hint="رمز عبور"
        android:gravity="right|center"
        android:inputType="textPassword"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:textSize="14dp"></EditText>


    <TextView
        android:id="@+id/txt_forgot_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="بازیابی اطلاعات ورود"
        android:layout_below="@id/edt_password"
        android:layout_marginTop="16sp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40dp"
        android:textColor="@color/DarkPrimaryColor"
        android:textSize="14dp"
        android:fontFamily="@font/vazir_bold"></TextView>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_login"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_forgot_pass"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:background="@drawable/shape_btn_login_enable"
        android:elevation="10dp"
        android:fontFamily="@font/vazir_medium"
        android:text="ورود"
        android:textColor="@color/white"></androidx.appcompat.widget.AppCompatButton>

</RelativeLayout>