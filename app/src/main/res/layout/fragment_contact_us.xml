<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_sheet_contact_us"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/DarkPrimaryColor"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/vazir_bold"
        android:text="ارتباط با ما"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></TextView>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/shape_dashbord"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.9">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:padding="12dp"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <androidx.cardview.widget.CardView
                    android:id="@+id/card1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    app:cardCornerRadius="20dp"

                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/constraintLayout5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/txt_admin_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/vazir_medium"
                            android:gravity="center"
                            android:textColor="@color/PrimaryColor"
                            android:textSize="18sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"></TextView>

                        <TextView
                            android:id="@+id/txt_post_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/vazir_medium"
                            android:gravity="center"
                            android:text="رییس"
                            android:textColor="@color/SecondaryText"
                            android:textSize="16sp"
                            app:layout_constraintEnd_toEndOf="@+id/txt_admin_1"
                            app:layout_constraintStart_toStartOf="@+id/txt_admin_1"
                            app:layout_constraintTop_toBottomOf="@+id/txt_admin_1"></TextView>

                        <LinearLayout
                            android:id="@+id/root_1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20sp"
                            android:gravity="center"
                            android:orientation="horizontal"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/txt_admin_1">


                            <androidx.cardview.widget.CardView
                                android:id="@+id/contact_us_email_1"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_marginTop="8dp"
                                android:layout_marginBottom="8dp"
                                android:alpha="1"
                                android:elevation="8dp"
                                app:cardCornerRadius="50dp">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_centerInParent="true"
                                    android:padding="15dp"
                                    android:src="@drawable/ic_email"
                                    app:tint="@color/DarkPrimaryColor"></ImageView>
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/contact_us_mobile_1"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_marginLeft="16dp"
                                android:layout_marginTop="8dp"
                                android:layout_marginBottom="8dp"
                                android:elevation="8dp"
                                app:cardCornerRadius="50dp">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_centerInParent="true"
                                    android:padding="15dp"
                                    android:src="@drawable/ic_mobile"
                                    app:tint="@color/DarkPrimaryColor"></ImageView>
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"

                    app:cardCornerRadius="20dp"
                    app:layout_constraintTop_toBottomOf="@id/card1">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/constraintLayout6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/txt_admin_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/vazir_medium"
                            android:gravity="center"
                            android:textColor="@color/PrimaryColor"
                            android:textSize="18sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"></TextView>

                        <TextView
                            android:id="@+id/txt_post_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/vazir_medium"
                            android:gravity="center"
                            android:text="معاون"
                            android:textColor="@color/SecondaryText"
                            android:textSize="16sp"
                            app:layout_constraintEnd_toEndOf="@+id/txt_admin_2"
                            app:layout_constraintStart_toStartOf="@+id/txt_admin_2"
                            app:layout_constraintTop_toBottomOf="@+id/txt_admin_2"></TextView>

                        <LinearLayout
                            android:id="@+id/root_2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20sp"
                            android:gravity="center"
                            android:orientation="horizontal"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/txt_admin_2">


                            <androidx.cardview.widget.CardView
                                android:id="@+id/contact_us_email_2"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_marginTop="8dp"
                                android:layout_marginBottom="8dp"
                                android:alpha="1"
                                android:elevation="8dp"
                                app:cardCornerRadius="50dp">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_centerInParent="true"
                                    android:padding="15dp"
                                    android:src="@drawable/ic_email"
                                    app:tint="@color/DarkPrimaryColor"></ImageView>
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/contact_us_mobile_2"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_marginLeft="16dp"
                                android:layout_marginTop="8dp"
                                android:layout_marginBottom="8dp"
                                android:elevation="8dp"
                                app:cardCornerRadius="50dp">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_centerInParent="true"
                                    android:padding="15dp"
                                    android:src="@drawable/ic_mobile"
                                    app:tint="@color/DarkPrimaryColor"></ImageView>
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    app:cardCornerRadius="20dp"
                    app:layout_constraintTop_toBottomOf="@id/card2">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/constraintLayout7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/constraintLayout6">

                        <TextView
                            android:id="@+id/txt_admin_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/vazir_medium"
                            android:gravity="center"
                            android:textColor="@color/PrimaryColor"
                            android:textSize="18sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"></TextView>

                        <TextView
                            android:id="@+id/txt_post_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/vazir_medium"
                            android:gravity="center"
                            android:text="دستیار"
                            android:textColor="@color/SecondaryText"
                            android:textSize="16sp"
                            app:layout_constraintEnd_toEndOf="@+id/txt_admin_3"
                            app:layout_constraintStart_toStartOf="@+id/txt_admin_3"
                            app:layout_constraintTop_toBottomOf="@+id/txt_admin_3"></TextView>

                        <LinearLayout
                            android:id="@+id/root_3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20sp"
                            android:gravity="center"
                            android:orientation="horizontal"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/txt_admin_3">


                            <androidx.cardview.widget.CardView
                                android:id="@+id/contact_us_email_3"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_marginTop="8dp"
                                android:layout_marginBottom="8dp"
                                android:alpha="1"
                                android:elevation="8dp"
                                app:cardCornerRadius="50dp">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_centerInParent="true"
                                    android:padding="15dp"
                                    android:src="@drawable/ic_email"
                                    app:tint="@color/DarkPrimaryColor"></ImageView>
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/contact_us_mobile_3"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_marginLeft="16dp"
                                android:layout_marginTop="8dp"
                                android:layout_marginBottom="8dp"
                                android:elevation="8dp"
                                app:cardCornerRadius="50dp">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_centerInParent="true"
                                    android:padding="15dp"
                                    android:src="@drawable/ic_mobile"
                                    app:tint="@color/DarkPrimaryColor"></ImageView>
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>


                </androidx.cardview.widget.CardView>


                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/vazir_medium"
                    android:text="آدرس صندوق قرض الحسنه انتظار :"
                    android:textColor="@color/PrimaryColor"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/card3"></TextView>

                <TextView
                    android:id="@+id/txt_address"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8sp"
                    android:layout_marginBottom="30dp"
                    android:fontFamily="@font/vazir_medium"
                    android:gravity="center"
                    android:paddingBottom="30dp"
                    android:textColor="@color/PrimaryText"
                    android:textSize="22sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView17"
                    app:layout_constraintWidth_percent="0.9"></TextView>

                <ir.alirezabdn.wp7progress.WP10ProgressBar
                    android:id="@+id/progress_bar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:animationDuration="2300"
                    app:indicatorColor="@color/LightPrimaryColor"
                    app:indicatorHeight="7"
                    app:indicatorRadius="5"
                    app:interval="100"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/card2" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>



