<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.auth.RegisterFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <androidx.cardview.widget.CardView
            android:id="@+id/card_personal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:elevation="4dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_personal_info"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="right"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/shape_top_of_register"
                    android:fontFamily="@font/kalameh_bold"
                    android:gravity="center"
                    android:text="اطلاعات فردی"
                    android:textColor="@color/PrimaryText"
                    android:textSize="22sp"></TextView>

                <EditText
                    android:id="@+id/edt_full_name"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/shape_edt_login"
                    android:drawableRight="@drawable/ic_person"
                    android:drawablePadding="10dp"
                    android:fontFamily="@font/kalameh_bold"
                    android:gravity="center|right"
                    android:hint="نام کامل *"
                    android:paddingLeft="12dp"
                    android:paddingRight="16dp"
                    android:textSize="16sp"></EditText>

                <EditText
                    android:id="@+id/edt_national_id"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/shape_edt_login"
                    android:drawableRight="@drawable/ic_card"
                    android:drawablePadding="10dp"
                    android:fontFamily="@font/kalameh_bold"
                    android:gravity="right|center"
                    android:hint="شماره ملی *"
                    android:inputType="number"
                    android:paddingLeft="12dp"
                    android:paddingRight="16dp"
                    android:textSize="16sp"></EditText>

                <EditText
                    android:id="@+id/edt_mobile_number1"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/shape_edt_login"
                    android:drawableRight="@drawable/ic_mobile"
                    android:drawablePadding="10dp"
                    android:fontFamily="@font/kalameh_bold"
                    android:gravity="right|center"
                    android:hint=" شماره موبایل 1 *"
                    android:inputType="phone"
                    android:paddingLeft="12dp"
                    android:paddingRight="16dp"
                    android:textSize="16sp"></EditText>

                <EditText
                    android:id="@+id/edt_mobile_number2"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/shape_edt_login"
                    android:drawableRight="@drawable/ic_mobile"
                    android:drawablePadding="10dp"
                    android:fontFamily="@font/kalameh_bold"
                    android:gravity="center|right"
                    android:hint=" شماره موبایل 2 "
                    android:inputType="phone"
                    android:paddingLeft="12dp"
                    android:paddingRight="16dp"
                    android:textSize="16sp"></EditText>


                <EditText
                    android:id="@+id/edt_phone_number"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_below="@id/edt_national_id"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/shape_edt_login"
                    android:drawableRight="@drawable/ic_phone"
                    android:drawablePadding="10dp"
                    android:fontFamily="@font/kalameh_bold"
                    android:gravity="right|center"
                    android:hint="شماره تلفن ثابت"
                    android:inputType="number"
                    android:paddingLeft="12dp"
                    android:paddingRight="16dp"
                    android:textSize="16sp"></EditText>

                <EditText
                    android:id="@+id/edt_postal_code"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_below="@id/edt_national_id"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/shape_edt_login"
                    android:drawableRight="@drawable/ic_post"
                    android:drawablePadding="10dp"
                    android:fontFamily="@font/kalameh_bold"
                    android:gravity="right|center"
                    android:hint="کد پستی *"
                    android:inputType="number"
                    android:paddingLeft="12dp"
                    android:paddingRight="16dp"
                    android:textSize="16sp"></EditText>

                <EditText
                    android:id="@+id/edt_address"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/shape_edt_login"
                    android:drawableRight="@drawable/ic_home"
                    android:drawablePadding="10dp"
                    android:fontFamily="@font/kalameh_bold"
                    android:gravity="right|center"
                    android:hint="آدرس *"
                    android:inputType="textPostalAddress"
                    android:lines="3"
                    android:paddingLeft="12dp"
                    android:paddingRight="16dp"
                    android:text=""
                    android:textSize="16sp"></EditText>

            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:elevation="4dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="16sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_account_info"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="right"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/shape_top_of_register"
                    android:fontFamily="@font/kalameh_bold"
                    android:gravity="center"
                    android:text="اطلاعات حساب"
                    android:textColor="@color/PrimaryText"
                    android:textSize="22sp"></TextView>

                <EditText
                    android:id="@+id/edt_account_number"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_below="@id/edt_national_id"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/shape_edt_login"
                    android:drawableRight="@drawable/ic_account_balance"
                    android:drawablePadding="10dp"
                    android:fontFamily="@font/kalameh_bold"
                    android:gravity="right|center"
                    android:hint="شماره حساب"
                    android:inputType="number"
                    android:paddingLeft="12dp"
                    android:paddingRight="16dp"
                    android:textSize="16sp"></EditText>

                <EditText
                    android:id="@+id/edt_card_number1"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_below="@id/edt_national_id"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/shape_edt_login"
                    android:drawableRight="@drawable/ic_card"
                    android:drawablePadding="10dp"
                    android:fontFamily="@font/kalameh_bold"
                    android:gravity="right|center"
                    android:hint="شماره کارت 1 *"
                    android:inputType="number"
                    android:paddingLeft="12dp"
                    android:paddingRight="16dp"
                    android:textSize="16sp"></EditText>

                <EditText
                    android:id="@+id/edt_card_number2"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/shape_edt_login"
                    android:drawableRight="@drawable/ic_card"
                    android:drawablePadding="10dp"
                    android:fontFamily="@font/kalameh_bold"
                    android:gravity="right|center"
                    android:hint="شماره کارت 2 "
                    android:inputType="number"
                    android:lines="3"
                    android:paddingLeft="12dp"
                    android:paddingRight="16dp"
                    android:text=""
                    android:textSize="16sp"></EditText>

                <EditText
                    android:id="@+id/edt_shaba"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/shape_edt_login"
                    android:drawableRight="@drawable/ic_account_balance"
                    android:drawablePadding="10dp"
                    android:fontFamily="@font/kalameh_bold"
                    android:gravity="right|center"
                    android:hint="شماره شبا *"
                    android:inputType="textPostalAddress"
                    android:lines="3"
                    android:paddingLeft="12dp"
                    android:paddingRight="16dp"
                    android:text=""
                    android:textSize="16sp"></EditText>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="4dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="16sp"
            android:layout_margin="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right">

                    <CheckBox
                        android:id="@+id/agreement_chb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/DarkPrimaryColor"
                        android:textColor="@color/PrimaryColor"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"></CheckBox>

                    <TextView
                        android:id="@+id/txt_ruls"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/kalameh_bold"
                        android:text="قوانین و شرایط"
                        android:textColor="@color/PrimaryColor"
                        android:textSize="16sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/agreement_chb"
                        app:layout_constraintTop_toTopOf="parent"></TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/kalameh_bold"

                        android:text=" استفاده از برنامه را می پذیرم."
                        android:textColor="@color/PrimaryText"
                        android:textSize="16sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/txt_ruls"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_register"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/edt_password"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/shape_btn_login_disable"
                    android:elevation="8dp"
                    android:enabled="false"
                    android:fontFamily="@font/kalameh_bold"
                    android:text="ثبت نام"
                    android:textColor="@color/white"
                    android:textSize="18sp"></androidx.appcompat.widget.AppCompatButton>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>