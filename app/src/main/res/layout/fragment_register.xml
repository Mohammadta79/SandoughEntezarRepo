<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.auth.RegisterFragment">

    <LinearLayout
        android:id="@+id/root_personal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:elevation="4dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="16dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_personal_info"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/shape_top_of_register"
                    android:drawableLeft="@drawable/ic_down"
                    android:fontFamily="@font/vazir_bold"
                    android:gravity="right|center"
                    android:paddingHorizontal="16dp"
                    android:text="اطلاعات فردی"
                    android:textColor="@color/PrimaryText"
                    android:textSize="16dp"></TextView>


                <LinearLayout
                    android:id="@+id/card_personal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <EditText
                        android:id="@+id/edt_full_name"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="30dp"
                        android:background="@drawable/shape_edt_login"
                        android:drawableRight="@drawable/ic_person"
                        android:drawablePadding="10dp"
                        android:fontFamily="@font/vazir_medium"
                        android:gravity="center|right"
                        android:hint="نام کامل *"
                        android:paddingLeft="12dp"
                        android:paddingRight="16dp"
                        android:textSize="16sp"></EditText>

                    <EditText
                        android:id="@+id/edt_national_id"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginRight="30dp"
                        android:background="@drawable/shape_edt_login"
                        android:drawableRight="@drawable/ic_card"
                        android:drawablePadding="10dp"
                        android:fontFamily="@font/vazir_medium"
                        android:gravity="right|center"
                        android:hint="شماره ملی *"
                        android:inputType="number"
                        android:paddingLeft="12dp"
                        android:paddingRight="16dp"
                        android:textSize="16sp"></EditText>

                    <EditText
                        android:id="@+id/edt_mobile_number1"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginRight="30dp"
                        android:background="@drawable/shape_edt_login"
                        android:drawableRight="@drawable/ic_mobile"
                        android:drawablePadding="10dp"
                        android:fontFamily="@font/vazir_medium"
                        android:gravity="right|center"
                        android:hint=" شماره موبایل 1 *"
                        android:inputType="phone"
                        android:paddingLeft="12dp"
                        android:paddingRight="16dp"
                        android:textSize="16sp"></EditText>

                    <EditText
                        android:id="@+id/edt_mobile_number2"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginRight="30dp"
                        android:background="@drawable/shape_edt_login"
                        android:drawableRight="@drawable/ic_mobile"
                        android:drawablePadding="10dp"
                        android:fontFamily="@font/vazir_medium"
                        android:gravity="center|right"
                        android:hint=" شماره موبایل 2 "
                        android:inputType="phone"
                        android:paddingLeft="12dp"
                        android:paddingRight="16dp"
                        android:textSize="16sp"></EditText>

                    <EditText
                        android:id="@+id/edt_phone_number"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_below="@id/edt_national_id"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginRight="30dp"
                        android:background="@drawable/shape_edt_login"
                        android:drawableRight="@drawable/ic_phone"
                        android:drawablePadding="10dp"
                        android:fontFamily="@font/vazir_medium"
                        android:gravity="right|center"
                        android:hint="شماره تلفن ثابت"
                        android:inputType="number"
                        android:paddingLeft="12dp"
                        android:paddingRight="16dp"
                        android:textSize="16sp"></EditText>

                    <EditText
                        android:id="@+id/edt_postal_code"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_below="@id/edt_national_id"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginRight="30dp"
                        android:background="@drawable/shape_edt_login"
                        android:drawableRight="@drawable/ic_post"
                        android:drawablePadding="10dp"
                        android:fontFamily="@font/vazir_medium"
                        android:gravity="right|center"
                        android:hint="کد پستی *"
                        android:inputType="number"
                        android:paddingLeft="12dp"
                        android:paddingRight="16dp"
                        android:textSize="16sp"></EditText>

                    <EditText
                        android:id="@+id/edt_address"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginBottom="12dp"
                        android:background="@drawable/shape_edt_login"
                        android:drawableRight="@drawable/ic_home"
                        android:drawablePadding="10dp"
                        android:fontFamily="@font/vazir_medium"
                        android:gravity="right|center"
                        android:hint="آدرس *"
                        android:inputType="textPostalAddress"
                        android:lines="3"
                        android:paddingRight="16dp"
                        android:text=""
                        android:textSize="16sp"></EditText>

                    <TextView
                        android:id="@+id/txt_national_card"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginRight="30dp"
                        android:background="@drawable/shape_txt_passport"
                        android:drawableRight="@drawable/ic_card"
                        android:drawablePadding="10dp"
                        android:fontFamily="@font/vazir_medium"
                        android:gravity="right|center"
                        android:hint="تصویر کارت ملی *"
                        android:paddingRight="16dp"
                        android:textColor="@color/PrimaryText"
                        android:textSize="16sp"></TextView>


                    <TextView
                        android:id="@+id/txt_passport"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginBottom="12dp"
                        android:background="@drawable/shape_txt_passport"
                        android:drawableRight="@drawable/ic_book"
                        android:drawablePadding="10dp"
                        android:fontFamily="@font/vazir_medium"
                        android:gravity="right|center"
                        android:hint="تصویر شناسنامه *"
                        android:paddingRight="16dp"
                        android:textColor="@color/PrimaryText"
                        android:textSize="16sp"></TextView>

                </LinearLayout>


            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:elevation="4dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="16dp">


            <LinearLayout
                android:id="@+id/root_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_account"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/shape_top_of_register"
                    android:drawableLeft="@drawable/ic_down"
                    android:fontFamily="@font/vazir_bold"
                    android:gravity="right|center"
                    android:paddingHorizontal="16dp"
                    android:text="اطلاعات حساب"
                    android:textColor="@color/PrimaryText"
                    android:textSize="16dp"></TextView>


                <LinearLayout
                    android:id="@+id/card_account"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <EditText
                        android:id="@+id/edt_account_number"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_below="@id/edt_national_id"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="30dp"
                        android:background="@drawable/shape_edt_login"
                        android:drawableRight="@drawable/ic_account_balance"
                        android:drawablePadding="10dp"
                        android:fontFamily="@font/vazir_medium"
                        android:gravity="right|center"
                        android:hint="شماره حساب *"
                        android:inputType="number"
                        android:paddingLeft="12dp"
                        android:paddingRight="16dp"
                        android:textSize="16sp"></EditText>

                    <EditText
                        android:id="@+id/edt_card_number1"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_below="@id/edt_national_id"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginRight="30dp"
                        android:background="@drawable/shape_edt_login"
                        android:drawableRight="@drawable/ic_card"
                        android:drawablePadding="10dp"
                        android:fontFamily="@font/vazir_medium"
                        android:gravity="right|center"
                        android:hint="شماره کارت 1 *"
                        android:inputType="number"
                        android:paddingLeft="12dp"
                        android:paddingRight="16dp"
                        android:textSize="16sp"></EditText>

                    <EditText
                        android:id="@+id/edt_card_number2"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginRight="30dp"
                        android:background="@drawable/shape_edt_login"
                        android:drawableRight="@drawable/ic_card"
                        android:drawablePadding="10dp"
                        android:fontFamily="@font/vazir_medium"
                        android:gravity="right|center"
                        android:hint="شماره کارت 2 "
                        android:inputType="number"
                        android:lines="3"
                        android:paddingLeft="12dp"
                        android:paddingRight="16dp"
                        android:text=""
                        android:textSize="16sp"></EditText>

                    <EditText
                        android:id="@+id/edt_shaba"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/shape_edt_login"
                        android:drawableRight="@drawable/ic_account_balance"
                        android:drawablePadding="10dp"
                        android:fontFamily="@font/vazir_medium"
                        android:gravity="right|center"
                        android:hint="شماره شبا *"
                        android:lines="3"
                        android:paddingLeft="12dp"
                        android:paddingRight="16dp"
                        android:text=""
                        android:textSize="16sp"></EditText>


                </LinearLayout>


            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right">

            <ir.alirezabdn.wp7progress.WP10ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                app:animationDuration="2300"
                app:indicatorColor="@color/LightPrimaryColor"
                app:indicatorHeight="7"
                app:indicatorRadius="5"
                app:interval="100"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <CheckBox
                android:id="@+id/agreement_chb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/DarkPrimaryColor"
                android:textColor="@color/PrimaryColor"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"></CheckBox>

            <TextView
                android:id="@+id/txt_ruls"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/vazir_medium"
                android:text="قوانین و شرایط"
                android:textColor="@color/PrimaryColor"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/agreement_chb"
                app:layout_constraintTop_toTopOf="parent"></TextView>

            <TextView
                android:id="@+id/textView18"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:fontFamily="@font/vazir_medium"
                android:text=" استفاده از برنامه را می پذیرم."
                android:textColor="@color/PrimaryText"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/txt_ruls"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_next_page"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/shape_btn_login_disable"
            android:elevation="8dp"
            android:enabled="false"
            android:fontFamily="@font/vazir_medium"
            android:paddingVertical="10dp"
            android:text="ثبت نام"
            android:textColor="@color/white"
            android:textSize="14sp"></androidx.appcompat.widget.AppCompatButton>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>