<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.auth.UploadImageFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:elevation="4dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_personal_info"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="right"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/shape_top_of_register"
                android:fontFamily="@font/vazir_bold"
                android:gravity="center"
                android:text="تصاویر مدارک"
                android:textColor="@color/PrimaryText"
                android:textSize="18sp"></TextView>

            <TextView
                android:id="@+id/txt_national_card"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/shape_txt_passport"
                android:drawableRight="@drawable/ic_card"
                android:drawablePadding="10dp"
                android:fontFamily="@font/vazir_medium"
                android:gravity="right|center"
                android:hint="تصویر کارت ملی *"
                android:paddingRight="16dp"
                android:textColor="@color/PrimaryText"
                android:textSize="16sp"></TextView>


            <TextView
                android:id="@+id/txt_passport"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/shape_txt_passport"
                android:drawableRight="@drawable/ic_book"
                android:drawablePadding="10dp"
                android:fontFamily="@font/vazir_medium"
                android:gravity="right|center"
                android:hint="تصویر شناسنامه *"
                android:paddingRight="16dp"
                android:textColor="@color/PrimaryText"
                android:textSize="16sp"></TextView>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_upload"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/shape_btn_login_enable"
        android:elevation="8dp"
        android:fontFamily="@font/vazir_medium"
        android:paddingVertical="10dp"
        android:text="بارگذاری"
        android:textColor="@color/white"
        android:textSize="14sp"></androidx.appcompat.widget.AppCompatButton>
    <ir.alirezabdn.wp7progress.WP10ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:animationDuration="2300"
        app:indicatorColor="@color/LightPrimaryColor"
        app:indicatorHeight="7"
        app:indicatorRadius="5"
        android:layout_marginBottom="12dp"
        app:interval="100"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"></ir.alirezabdn.wp7progress.WP10ProgressBar>

</LinearLayout>