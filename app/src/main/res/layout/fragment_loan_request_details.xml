<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/DarkPrimaryColor"
    tools:context=".ui.request_action.LoanRequestDetailsFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/kalameh_bold"
        android:text="جزییات درخواست تسهیلات"
        android:textColor="@color/white"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></TextView>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/shape_dashbord"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.9">


        <LinearLayout
            android:id="@+id/root_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/root_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:elevation="10dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="16dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <RelativeLayout
                        android:id="@+id/layout_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <View
                            android:id="@+id/view"
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_below="@id/txt_date"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@color/DividerColor"></View>


                        <TextView
                            android:id="@+id/txt_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="4dp"
                            android:fontFamily="@font/hamurz"
                            android:textColor="@color/PrimaryText"
                            android:textSize="16sp"></TextView>
                    </RelativeLayout>


                    <TextView
                        android:id="@+id/txt_request_details"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:fontFamily="@font/vazir_medium"
                        android:layout_marginTop="4dp"
                        android:layout_below="@id/layout_title"
                        android:scrollbars="vertical"
                        android:layout_marginLeft="10dp"
                        android:textIsSelectable="true"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/PrimaryText"
                        android:textSize="12sp"></TextView>

                    <View
                        android:id="@+id/view2"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_below="@id/txt_request_details"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@color/DividerColor"></View>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_below="@id/view2"
                        android:layout_height="wrap_content">


                        <TextView
                            android:id="@+id/textView16"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:fontFamily="@font/kalameh_bold"
                            android:text="مبلغ درخواستی: "
                            android:gravity="center"
                            android:textColor="@color/PrimaryText"
                            android:textSize="16sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"></TextView>

                        <TextView
                            android:id="@+id/txt_request_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="4dp"
                            android:fontFamily="@font/kalameh_bold"
                            android:gravity="center"
                            android:text="3000000 تومان"
                            android:textColor="@color/SecondaryText"
                            android:textSize="16sp"
                            app:layout_constraintEnd_toStartOf="@+id/textView16"
                            app:layout_constraintTop_toTopOf="@+id/textView16"></TextView>


                        <TextView
                            android:id="@+id/textView17"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:fontFamily="@font/kalameh_bold"
                            android:gravity="center"
                            android:text="تعداد اقساط درخواستی: "
                            android:textColor="@color/PrimaryText"
                            android:textSize="16sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textView16"></TextView>

                        <TextView
                            android:id="@+id/txt_request_installment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/kalameh_bold"
                            android:gravity="center"
                            android:text="12 قسط"
                            android:textColor="@color/SecondaryText"
                            android:textSize="16sp"
                            app:layout_constraintEnd_toStartOf="@+id/textView17"
                            app:layout_constraintTop_toTopOf="@+id/textView17"></TextView>



                    </androidx.constraintlayout.widget.ConstraintLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView

                android:id="@+id/root_reply"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:elevation="10dp"
                android:visibility="gone"
                app:cardBackgroundColor="@color/LightPrimaryColor"
                app:cardCornerRadius="16dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <RelativeLayout
                        android:id="@+id/layout_title_reply"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <TextView
                            android:id="@+id/txt_title_reply"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="4dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="4dp"
                            android:fontFamily="@font/vazir_bold"
                            android:textColor="@color/PrimaryText"
                            android:textSize="14sp"></TextView>

                        <View
                            android:id="@+id/view_reply"
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_below="@id/txt_title_reply"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@color/DividerColor"></View>


                        <TextView
                            android:id="@+id/txt_date_reply"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="4dp"
                            android:fontFamily="@font/hamurz"
                            android:textColor="@color/PrimaryText"
                            android:textSize="16sp"></TextView>
                    </RelativeLayout>


                    <TextView
                        android:id="@+id/txt_message_reply"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_below="@id/layout_title_reply"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginRight="10dp"
                        android:fontFamily="@font/vazir_medium"
                        android:scrollbars="vertical"
                        android:textColor="@color/PrimaryText"
                        android:textIsSelectable="true"
                        android:textSize="12sp"></TextView>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <TextView
            android:id="@+id/txt_no_reply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/kalameh_bold"
            android:text="پاسخی برای این درخواست یافت نشد"
            android:textColor="@color/PrimaryText"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/root_2"></TextView>

        <ir.alirezabdn.wp7progress.WP10ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:animationDuration="2300"
            app:indicatorColor="@color/LightPrimaryColor"
            app:indicatorHeight="7"
            app:indicatorRadius="5"
            app:interval="100"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>